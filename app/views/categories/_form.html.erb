<%= form_for(@category, html: { role: 'form' }) do |f| %>
  <div class="form-group">
    <%= f.text_field :title, class: 'form-control', required: true, placeholder: 'Название' %>
  </div>
  <div class="form-group">
    <%= f.text_field :url, class: 'form-control', required: true, placeholder: 'Url' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Сохранить', data: { disable_with: 'Сохраняем...' }, class: 'btn btn-d' %>
  </div>
<% end %>
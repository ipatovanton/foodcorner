<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.email_field :email, placeholder: 'Еmail', required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Пароль', required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Подтверждение пароля', required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Зарегистрироваться', data: { disable_with: '...' }, class: 'btn btn-s' %>
    <%= link_to "Войти", new_session_path(resource_name), class: 'btn btn-d' %>
  </div>
<% end %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' }) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, placeholder: 'Еmail', required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Пароль', required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Войти', data: { disable_with: '...' }, class: 'btn btn-s' %>
    <%= link_to "Зарегистрироваться", new_registration_path(resource_name), class: 'btn btn-d' %>
  </div>
<% end %>
